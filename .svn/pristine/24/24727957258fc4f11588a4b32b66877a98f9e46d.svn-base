// 引入z.less库
@import "plus/z";

// 初始化页面
.reset();

.maxBody(@width: 100%, @height: 100%) {
    width: @width;
    height: @height;
}

html,
body{
	.maxBody();
	.font-fm();
	background: rgba(0, 0, 51, 0.7);
	-webkit-box-sizing:border-box;
	-moz-box-sizing:border-box;
	box-sizing:border-box;
}
#con{
	.maxBody();
	#content{
		.maxBody();
		.header{
		    .maxBody(100%,6%);
		    .rel();
    		.abs();
			.d-ib();
			.abs();
			background: #224980;
			box-sizing: border-box;
		    -moz-box-sizing: border-box;
		    -webkit-box-sizing: border-box;
			p{
				.maxBody(100%,100%);
				text-align: center;
				span{
					color:#fff;
					font-size: 3vh;
					line-height: 2;
					&:nth-child(4){
						color:red;
					}
				}
			}
		}
		.nav{
			.maxBody(100%,9%);
			.d-ib();
			.abs();
			top: 8%;
			background-image: url(../img/titleBg.png);
			background-size: auto 100%;
			box-sizing: border-box;
		    -moz-box-sizing: border-box;
		    -webkit-box-sizing: border-box;
			p{
				.maxBody(100%,100%);
				text-align: center;
				span{
					color:#fff;
					font-size: 3vh;
					line-height: 2.6;
					&:nth-child(4){
						color:red;
					}
				}
			}
		}
		.con{
			.maxBody(100%,80%);
		    .abs();
		    top: 20%;
		    .map{
		    	.maxBody(60%,90%);
		    }
		    .count{
		    	.maxBody(40%,90%);
		    	float:left;
		    }
		}
	}
}