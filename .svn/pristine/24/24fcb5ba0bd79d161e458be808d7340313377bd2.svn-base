// 引入z.less库
@import "plus/z";


// 初始化页面
.reset();

html,
body{
	.maxBody();
	overflow: hidden;
	background: rgba(0,0,51,1) !important;
}
header{
	@color:rgba(0, 153, 255, 0.5);
	margin-bottom: 2%; 
	.maxBody(100%,6%);
	.head-left {
		.maxBody(15%,100%);
		.fl();
	}
	.head-right {
		.maxBody(15%,100%);
		.fl();
	}
	.head-con {
		.maxBody(70%,100%);
		.fl();
		.b-sizing();
		.rel();
	}
	.head-con img {
		.maxBody();
		z-index: 2;
	}
	.head-con p {
		.abs();
		.maxBody(100%,80%);
		.font-s(3.4vh);
		.font-fm();
		.d-flex-h();
		.flex-hc();
		.flex-vc();
		color: #fff;
		top: 0;
		z-index: 4;
	}
}

.container{
	.maxBody();
	.b-sizing();
	.content-cp{
		.d-flex-v();
		height: 95%;
		padding-bottom: 5%;
		section{
			opacity: 0;
			.d-flex-v();
			.flex(1);
			.b-sizing();
			height: 80%;
			margin: 1% 2% 0;
			.table-box{
				width: 100%;
				overflow: hidden;
				.maxBody();
				.d-flex-v();
				.flex(1);
			}
			.contentBox-style1 {
				.flex(18.5);
			}

			.contentBox-style2 {
				.flex(19);
			}

			.contentBox-style3 {
				.flex(25.6);
			}
			.contentBox-style4 {
				.flex(14.3);
			}
			.contentBox-style5 {
				.flex(7.4);
				padding-right: 1.7%;
			}
			ul.goodsListHeader{
				.flex(1);
				.d-flex-h();
				color: #fff;
				background-image: url(../img/titleBg.png);
				background-size: auto 100%;
				li{
					.font-fm();
					font-size: 2.4vh;
					margin-top: 1vh;
				    margin-left: 1.7%;
				    display:inline-block;
				    white-space: nowrap;
				    overflow: hidden;
				    text-overflow: ellipsis;
				}
				li:after{
					content:'';
					display:inline-block;
					width:0;
					height:100%;
					vertical-align:middle;
				}
			}
			.goodsListContent{
				.flex(15);
				.d-flex-v();
				width: 100%;
				.bc();
				ul.contentBox{
					.flex(1);
					.d-flex-h();
					color: #ffc;
					font-size:0;
					li{
						.font-fm();
						font-size: 2vh;
						margin-top: 1vh;
					    margin-left: 1.7%;
					    display:inline-block;
					    white-space: nowrap;
					    overflow: hidden;
					    text-overflow: ellipsis;
					}
					li:after{
						content:'';
						display:inline-block;
						width:0;
						height:100%;
						vertical-align:middle;
					}
				}
				ul:nth-child(even) {
					background-color: #001149;
				}
			}
		}
		footer{
			opacity: 0;
			height: 5%;
			.pager{
				.maxBody(96%,100%);
				.bc();
				.d-flex-h();
				background-color: #001149;
				.pager-list{
					.font-s(2vh);
					.font-fm();
					.d-flex-h();
					.flex-hc();
					.flex-vc();
					.flex(1);
					.page{
						color:#fff;
					}
				}
			}
			.normalColor{
				color:rgba(176, 34, 6, 0.2);
				opacity: 0;
			}
			.chooseSelect{
				color:#fff;
				opacity: 0;
			}
		}
	}
}
.none{
	display: none;
}