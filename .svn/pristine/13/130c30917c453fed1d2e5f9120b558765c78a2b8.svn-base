// 引入z.less库
@import "plus/z";

// 初始化页面
.reset();

.maxBody(@width: 100%, @height: 100%) {
    width: @width;
    height: @height;
}

html,
body{
	.maxBody();
	.font-fm();
	background: rgba(0, 0, 51, 0.7);
	.b-sizing();
}
.anchorBL{  
   display:none;  
}  
#con{
	opacity: 0;
	.maxBody();
	#content{
		.maxBody();
		margin:auto;
		.header{
		    .maxBody(100%,8.4%);
		    .rel();
			.d-ib();
			.abs();
			background: #224980;
			.b-sizing();
			p{
				.maxBody(100%,100%);
				text-align: center;
			    color: #fff;
			    font-size: 5.6vh;
			    line-height: 1.4;
			    .b-sizing();
			}
		}
		.nav{
			.maxBody(100%,12%);
			.d-ib();
			.abs();
			top: 11%;
			background-image: url(../img/titleBg.png);
			background-size: auto 100%;
			.b-sizing();
			p{
				.maxBody(100%,100%);
				.b-sizing();
				text-align: center;
				color: #fff;
			    font-size: 7vh;
			    line-height: 1.6;
				span{
					&:nth-child(4){
						color:#ff3333;
					}
				}
			}
		}
		.con{
			.maxBody(100%,74%);
		    .abs();
		    top: 26%;
		    .map{
		    	.maxBody(60%,100%);
		    	float:left;
		    	border: 3px solid rgba(40,83,141,1);
		    	.b-sizing();
		    }
		    .count{
		    	.maxBody(40%,100%);
		    	.fl();
		    	.Logistical{
					.maxBody(95%,50%);
				    background-image: url(/TJ-province/public/img/topBg.png);
   					background-size: 100% 100%;
   					.b-sizing();
   					.flex(1);
   					.d-flex-v();
   					float: right;
   					div{
   						.maxBody(100%,55%);
					    margin:auto;
					    .b-sizing();
   						p{
   							text-align: center;
   							&:nth-child(1){
								color:#fff;
   								font-size: 7vh;
   							}
   							&:nth-child(2){
   								color:#fff;
   								font-size: 5.5vh;
   								span{
	   								color:#66cc00;
	   								font-size: 11vh;
	   							}
   							}
   						}
   					}
		    	}
		    	.express{
					.maxBody(95%,50%);
					margin:auto;
					background-image: url(/TJ-province/public/img/topBg.png);
   					background-size: 100% 100%;
   					.b-sizing();
   					.flex(1);
   					.d-flex-v();
   					float: right;
   					div{
   						.maxBody(100%,55%);
					    margin:auto;
   						p{
					    	text-align: center;
   							&:nth-child(1){
								color:#fff;
   								font-size: 7vh;
   							}
   							&:nth-child(2){
   								color:#fff;
   								font-size: 5.5vh;
   								span{
	   								color:#ffdd00;
	   								font-size: 11vh;
	   							}
   							}
   						}
   					}
		    	}
		    }
		}
	}
}