// 引入z.less库
@import "plus/z"; 

// 初始化页面
.reset();
@font-face{font-family: 'arial';src: url('../css/arial.ttf');} 
html,
body{
	.maxBody();
	// background: #000938;
	#container{
		.maxBody();
		opacity: 0;
	}
}
.container{
	.maxBody();
	background: url('../img/timeline/repeatIco.png');
	.d-flex-h();
	.b-sizing();
	.header-ng{
		position:fixed;
		top:0;
		height:10px;
		left:25px;
	}
	.mapShowBox{
		height: 100%;
		padding: 7px;
		.b-sizing();
		position: relative;
		.smallMapDv {
			.maxBody(44%,44%);
			position: absolute;
			top: 10px;
			left:0px;
			margin: 28%;
			z-index: 0;
			div{
				.maxBody();
			}
		}
		img{
			height: 100%;
			position: relative;
			z-index: 2;
		}
	}
	.timeLineBox{
		.flex(1);
		.d-flex-v();
		position: relative;
		height: 100%;
		margin-right: 7px;
		.navNameShow{
			position: relative;
			height:15.57%;
			background:url('../img/titleBg.png');
			background-size:auto 100%;
			margin-top:7px;
			img{
				width: 100%;
			}
			.navHeadBox{
				position: absolute;
				color: #fff;
				top: 0;
				left: 0;
				.maxBody();
				.d-flex-h();
				.flex-hc();
				.flex-vc();
				font-size: 7vh;
				.font-fm();
				text-align: center;
			}
		}
		.sectionBox{
			.flex(1);
			position:relative;
			z-index:1;
		}
	}
}
.get-ani-num{
	color:#ffdd00;
}
.get-ani-num2{
	color:#ff5400;
}
.short-size-span{
	color:#fff;
}
.xuniBg{
	.maxBody(100%,6.6%);
	max-height: 20px;
	background:rgba( 0, 153, 255, .2);
	position:absolute;
	bottom:7px;
	z-index:0;
}


