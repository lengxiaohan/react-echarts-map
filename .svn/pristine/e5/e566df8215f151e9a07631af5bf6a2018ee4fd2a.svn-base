// 引入z.less库
@import "plus/z";


// 初始化页面
.reset();

html,
body{
	.maxBody();
	background: #16172C;
	overflow: hidden;
}

.container{
	.maxBody();
}

.hide{
	opacity: 0;
}
.show{
	opacity: 1;
}
.echarts-loding{
	@lodingWidth: 40px;
	position: absolute;
	top: 0;
	left: 0;
	.maxBody();
	img{
		.maxBody(@lodingWidth,@lodingWidth);
		position: absolute;
		top:50%;
		left: 50%;
		margin-top:@lodingWidth/-2;
		margin-left: @lodingWidth/-2;
	}
	.puffLoading{
		position: relative;
		text-align: center;
		color: #fff;
		top: 50%;
		margin-top: 30px;
		font-size: 15px;
	}
}


.container-cp{
	.maxBody();

	header{
		width: 100%;
		height: 14%;

		.d-flex-h();
		.flex-hc();
		.flex-vc();
		.font-fm();
		color: #ABACB1;
		font-size: 4vh;
		opacity: 0;

	}

	section{
		width: 100%;
		height: 86%;
		opacity: 0;

		.map-box{
			width: 60%;
			height: 100%;
			position: relative;
			.fl();
			.map-show{
				height: 100%;
			}
			.map-msg-box{
				position: absolute;
				bottom: 5%;
				left: 5%;
				color: #6c7b90;
				font-size: 2vh;
				.font-fm();
				img{
					position: relative;
					top:6px;
				}
			}
		}

		.list-box{
			width: 35%;
			height: 100%;
			margin-left: 5%;
			.fl();
			.d-flex-v();

			.list-title{
				color: #7D8491;
				margin: 2% 0 0 0;
				height: 5%;
				.font-fm();
				font-size: 4vh;
			}

			.pushAnimateNum{
				color: #EDB204;
				font-size: 6vh;
				margin: 2% 0;
				height: 10%;
				.font-fm();
				.short-size-span{
					color: #7D8491;
					font-size: 4vh;
					margin: 0 5px;
					.font-fm();
				}
				
			}
			.pushListBox{
				margin: 0;
				.d-flex-v();
				margin-bottom: 10%;
  				margin-right: 10%;
				height: 75%;
  				li{
					.maxBody(100%,10%);
					.d-flex-h();
					.flex-vc();
  					background: #1A1C31;

  					&:nth-child(odd){
  						background: #1F2136;
  					}

  					p{
  						text-align: center;
						.d-flex-h();
						.flex(2);
						.flex-vc();
						.font-fm();
						.b-sizing();
						padding: 0 3%;
						color: #aeb6c1;
						font-size: 2.5vh;
						.txt-overflowed();
						.flex-hc();
    					&.listFlex1{
	  						.flex(1);
	  						color: #7D8491;
	  					}

	  					&.listFlex2{
	  						.flex(3);
	  						color: #EDB204;
	  						.short-size-span{
	  							margin: 0 2px;
		  						color: #7D8491;
		  					}
	  					}

	  					&:nth-child(2){
	  						.flex-hc(flex-start);
	  					}

	  					&:nth-child(3){
	  						.flex-hc(flex-end);
	  					}

  					}

  				}
			}
		}
		
	}
}
