// 引入z.less库
@import "plus/z";


// 初始化页面
.reset();

@margin-box-left:57.7%;

html,
body{
	.maxBody();
	background: #16172C;
	.container-box{
		.maxBody();
	}
}
.container{
	.maxBody();
	opacity: 0;
	overflow: hidden;
}
.echarts-map-show{
	.fl();
	.maxBody(@margin-box-left,100%);
}
.hide{
	opacity: 0;
}
.show{
	opacity: 1;
}

.echarts-list-show{
	margin-left: @margin-box-left;
	.maxBody(100%-@margin-box-left,100%);
	.b-sizing();
	padding: 0 4.3% 0 0;
	.list-box{
		.maxBody();
		section{
			.maxBody();
			.d-flex-v();
			border: 1px solid #1B1C31;
			border-radius: 10px;
			.nav-title{
				.flex(1);
				height: 10%;
				.d-flex-h();
				.flex-hc();
				.flex-vc();
				width: 100%;
				span{
					.d-flex-h();
					.flex-hc();
					.flex-vc();
					height: 100%;
					padding: 0 1%;
					.b-sizing();
					.font-fm();
					font-size: 3.3vh;
					color: #fff;
					.txt-overflowed();
					&:first-child{
						.flex(4);
						.flex-hc();
					}
					&:nth-child(2){
						.flex(16);
						.flex-hc(flex-start);
					}
					&:nth-child(3){
						.flex(5);
						.flex-hc(flex-end);
					}
					&:nth-child(4){
						.flex(8);
						.flex-hc(flex-start);
					}
				}
			}
			ul{
				.flex(10);
				height: 90%;
				.d-flex-v();
				.flex-hc();
				.flex-vc();
				li{
					.flex(1);
					.maxBody(100%,10%);
					.d-flex-h();
					.flex-vc();
					span{
						.d-flex-h();
						.flex-vc();
						.font-fm();
						height: 100%;
						.b-sizing();
						padding: 0 1%;
						color: #aeb6c1;
						font-size: 2.8vh;
						.txt-overflowed();
						&:first-child{
							.flex(4);
							.flex-hc();
						}
						&:nth-child(2){
							.flex(16);
							.flex-hc(flex-start);
						}
						&:nth-child(3){
							.flex(5);
							.flex-hc(flex-end);
						}
						&:nth-child(4){
							.flex(8);
							.flex-hc(flex-start);
						}
					}
					.showList{
						opacity: 1;
					}
					&:nth-child(odd){
						background: #1A1C31;
					}
				}
				
			}
		}
	}
}